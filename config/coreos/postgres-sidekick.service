[Unit]
Description=Postgres.service Sidekick
BindsTo=postgres.service
After=postgres.service

[Service]
EnvironmentFile=/etc/environment
ExecStart=/bin/sh -c "while true; do etcdctl set /services/skella/postgres '{ \"host\": \"${COREOS_PUBLIC_IPV4}\", \"port\": 5432 }' --ttl 60;sleep 45;done"
ExecStop=/usr/bin/etcdctl rm /services/skella/postgres

[X-Fleet]
MachineOf=postgres.service